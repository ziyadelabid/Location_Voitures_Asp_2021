@model IEnumerable<Projet_Asp_Location_Voitures_2021.Models.Voiture>

@{
    ViewBag.Title = "ListVoiture";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Proprietaire</title>
    <link href="css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    <style>
        a {
            padding-left: 10px;
        }
    </style>
</head>
<body class="sb-nav-fixed">

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
           Liste de voitures de ce propriétaire :
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Marque
                            </th>
                            <th>
                                Couleur
                            </th>
                            <th>
                                Année du modèle
                            </th>
                            <th>
                                Carburant
                            </th>
                            <th>
                                Boîte vitesse
                            </th>
                            <th>
                                Num de Portes
                            </th>
                            <th>
                                Num de Places
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Marque)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Couleur)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Annee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Carburant)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Boite_Vitesse)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Places)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Portes)
                            </td>
                            <td>
                                <a href="@Url.Action("EditVoiture", "Prop", new { id = item.Id_Voiture})" id="btnSearch" class="my-auto"><img src="~/images/edit.jpg" width="30" /></a>
                                <a href="@Url.Action("DeleteVoiture", "Prop", new { id = item.Id_Voiture })" id="btnClear" class="my-auto"><img src="~/images/trash.png" width="30" /></a>
                               
                            </td>
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
</body>
</html>


