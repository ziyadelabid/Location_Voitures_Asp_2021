@model  Projet_Asp_Location_Voitures_2021.Models.Reservation

@{
    ViewBag.Title = "EditResLoc";
    
}
<!DOCTYPE html>
<html>
<head>
    <title>Profil </title>
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' rel="stylesheet">
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js'></script>
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' rel="stylesheet">
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <style>
        body {
            margin-top: 50px;
            background-position: center;
            /* Center the image */ background-repeat: repeat-y; /* Do not repeat the image */
            background-size: cover;
            background-image: url("/images/profilbg.jpg");
            height: 100vh;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8;
        }

        .profile-button {
            background: #BA68C8;
            box-shadow: none;
            border: none;
        }

            .profile-button:hover {
                background: #682773;
            }

            .profile-button:focus {
                background: #682773;
                box-shadow: none;
            }

            .profile-button:active {
                background: #682773;
                box-shadow: none;
            }

        .back:hover {
            color: #682773;
            cursor: pointer;
        }

        .rounded-circle {
            margin-bottom: 15px;
        }

        .style2 {
            font-family: "Monotype Corsiva";
            font-size: xx-large;
            font-weight: bold;
            color: #3399FF;
            margin: 5px;
            text-align: center;
        }

        .row {
            background-color: #aab6b1;
        }
    </style>
</head>
<body>

    @Html.AntiForgeryToken()

    <div class="container rounded bg-white">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Montant)
        @Html.HiddenFor(model => model.Id_Loc)

        <div class="row">

            <div class="col-md-10">
                <div class="p-3 py-5">
                    <div class="">

                        <h2 class="style2">Modification </h2><hr />
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4"></div>
                        <h5 class="col-md-3">Date de reservation :</h5>
                        <input type="date" name="Date_Reservation" id="Date_Reservation" class="form-control col-md-3" />

                    </div>
                    <div class="row mt-3">
                        <div class="col-md-4"></div>
                        <h5 class="col-md-3">Date de retour :</h5>
                        <input type="date" name="Date_retour" id="Date_Retour" class="form-control col-md-3" />
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-4"></div>
                        <h5 class="col-md-3">Marque:</h5>
                        @Html.DropDownList("Id_Voit", null, htmlAttributes: new { @class = "form-control col-md-3" })
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-4"></div>
                        <div class="col-md-3"></div>
                        <div class="col-md-3">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Enregestrer" class="btn btn-success" style="width:100%;border-radius:12px;" />
                                </div>

                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>





</body>

</html>


