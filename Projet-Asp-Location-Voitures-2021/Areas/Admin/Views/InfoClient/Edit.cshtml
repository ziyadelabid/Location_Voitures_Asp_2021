@model  Projet_Asp_Location_Voitures_2021.Models.Locataire

@{
    ViewBag.Title = "EditProfil";

}
<!DOCTYPE html>
<html>
<head>
    <title>Profil </title>
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' rel="stylesheet">
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js'></script>
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' rel="stylesheet">
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <style>
        body {
            margin-top: 50px;
            background-position: center;
            /* Center the image */ background-repeat: repeat-y; /* Do not repeat the image */
            background-size: cover;
            background-image: url("/images/profilbg.jpg");
            height: 100vh;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8;
        }

        .profile-button {
            background: #BA68C8;
            box-shadow: none;
            border: none;
        }

            .profile-button:hover {
                background: #682773;
            }

            .profile-button:focus {
                background: #682773;
                box-shadow: none;
            }

            .profile-button:active {
                background: #682773;
                box-shadow: none;
            }

        .back:hover {
            color: #682773;
            cursor: pointer;
        }

        .rounded-circle {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id_Locataire)

        <div class="container rounded bg-white">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



            <div class="row">

                <div class="col-md-10">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">

                            <h6 class="text-left">Modifier Les information de Locataire :</h6>
                        </div>
                        <div class="row mt-2">
                            <label class="col-md-2">Nom :</label>
                            <div class="col-md-4">@Html.EditorFor(model => model.Name_Loc, new { htmlAttributes = new { @class = "form-control", placeholder = "Nom Complet" } })</div>
                        </div>
                        <div class="row mt-3">
                            <label class="col-md-2">Email :</label>
                            <div class="col-md-4">@Html.EditorFor(model => model.Email_Loc, new { htmlAttributes = new { @class = "form-control", placeholder = "Tél" } })</div>
                            <label class="col-md-2">Mot de passe :</label>
                            <div class="col-md-4">@Html.EditorFor(model => model.Password_Loc, new { htmlAttributes = new { @class = "form-control", placeholder = "Statut" } })</div>
                        </div>
                        <div class="row mt-3">
                            <label class="col-md-2">CIN :</label>
                            <div class="col-md-4">@Html.EditorFor(model => model.Cin_Loc, new { htmlAttributes = new { @class = "form-control", placeholder = "Tél" } })</div>
                            <label class="col-md-2">Téléphone :</label>
                            <div class="col-md-4">@Html.EditorFor(model => model.Phone_number_Loc, new { htmlAttributes = new { @class = "form-control", placeholder = "Statut" } })</div>
                        </div>
                        <div class="row mt-3">
                            <label class="col-md-2">Permis :</label>
                            <div class="col-md-4">@Html.EditorFor(model => model.Permis, new { htmlAttributes = new { @class = "form-control", placeholder = "Tél" } })</div>
                            <label class="col-md-2">Adresse :</label>
                            <div class="col-md-4">@Html.EditorFor(model => model.Adresse_Loc, new { htmlAttributes = new { @class = "form-control", placeholder = "Statut" } })</div>
                        </div>

                        <div class="mt-5 text-right"><input type="submit" value="Sauvegarder" class="btn btn-primary" /></div>
                    </div>
                </div>
            </div>
        </div>

    }

</body>

</html>
