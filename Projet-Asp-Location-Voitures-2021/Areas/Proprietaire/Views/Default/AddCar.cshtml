@model Projet_Asp_Location_Voitures_2021.Models.Voiture
@{ Layout = "~/Areas/Proprietaire/Views/Shared/UserLayout.cshtml";
}
@{
    ViewBag.Title = "AddCar";
}
<!DOCTYPE html>
<html>
<head>
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'>
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js'></script>
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <style>
        body {
            background-position: center;
            /* Center the image */ background-repeat: repeat-y; /* Do not repeat the image */
            background-size: cover;
            background-image: url("/images/profilbg.jpg");
            height: 100vh;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8
        }

        .profile-button {
            background: #BA68C8;
            box-shadow: none;
            border: none
        }

            .profile-button:hover {
                background: #682773
            }

            .profile-button:focus {
                background: #682773;
                box-shadow: none
            }

            .profile-button:active {
                background: #682773;
                box-shadow: none
            }

        .back:hover {
            color: #682773;
            cursor: pointer
        }

        .rounded-circle {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("AddCar", "Default", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
    <div class="container rounded bg-white mt-5">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Prop)
        @Html.HiddenFor(model => model.Image_Voiture)
        @Html.HiddenFor(model => model.Image_Name)



        <div class="col-md-8">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">

                    <h6 class="text-left">Coordonnées de la voiture :</h6>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">@Html.EditorFor(model => model.Marque, new { htmlAttributes = new { @class = "form-control", placeholder = "Marque" } })</div>
                    <div class="col-md-6">@Html.EditorFor(model => model.Couleur, new { htmlAttributes = new { @class = "form-control", placeholder = "Couleur" } })</div>
                </div>
                     
                <div class="row mt-3">
                    <div class="col-md-2">
                        <label class="text-center">Année du modèle :</label>
                        </div>
                        <div class="col-md-4">@Html.EditorFor(model => model.Annee, new { htmlAttributes = new { @class = "form-control" }, placeholder = "Année" })</div>
                        <div class="col-md-6">@Html.EditorFor(model => model.Prix, new { htmlAttributes = new { @class = "form-control", placeholder = "Prix" } })</div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"> @Html.EditorFor(model => model.Promotion, new { htmlAttributes = new { @class = "form-control", placeholder = "Promotion (Optional)" } })</div>
                        <div class="col-md-6">
                            <label>Carburant :</label>
                            <label class="radio-container m-r-55">
                                Diesel
                                @Html.RadioButtonFor(model => model.Carburant, "Diesel")
                                <span class="checkmark"></span>
                            </label>
                            <label class="radio-container">
                                Essence
                                @Html.RadioButtonFor(model => model.Carburant, "Essence")
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">@Html.EditorFor(model => model.Places, new { htmlAttributes = new { @class = "form-control", placeholder = "Num de Places" } })</div>
                        <div class="col-md-6"> @Html.EditorFor(model => model.Portes, new { htmlAttributes = new { @class = "form-control", placeholder = "Num de Portes" } })</div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">@Html.EditorFor(model => model.Emplacement_Prise, new { htmlAttributes = new { @class = "form-control", placeholder = "Emplacement de prise" } })</div>
                        <div class="col-md-6"> @Html.EditorFor(model => model.Emplacement_Retour, new { htmlAttributes = new { @class = "form-control", placeholder = "Emplacement de retour" } })</div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label>Boîte Vitesse :</label>
                            <label class="radio-container m-r-55">
                                Auto
                                @Html.RadioButtonFor(model => model.Boite_Vitesse, "Auto")
                                <span class="checkmark"></span>
                            </label>
                            <label class="radio-container">
                                Manuelle
                                @Html.RadioButtonFor(model => model.Boite_Vitesse, "Mannuelle")
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">

                            <div class="editor-field">
                                <label class="label label--block">Télécharger L'image de la voiture :</label>
                                <input type="file" name="imageVoiture" />
                            </div>

                        </div>
                    </div>
                    <div class="mt-5 text-right"><input type="submit" value="Ajouter" class="btn btn-primary" /></div>
                </div>
            </div>
    </div>
   

    }

</body>

</html>
