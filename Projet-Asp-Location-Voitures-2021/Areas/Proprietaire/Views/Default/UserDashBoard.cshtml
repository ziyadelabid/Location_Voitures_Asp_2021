@model IEnumerable<Projet_Asp_Location_Voitures_2021.Models.Voiture>


@{
    ViewBag.Title = "Index";
}
@{ Layout = "~/Areas/Proprietaire/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'>
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>

    <style>
       

        body {
            margin-top:50px;
            background: #F5F1EE;
        
        }


        .card {
            width: 250px;
            border-radius: 10px;
            margin: 15px;
        }

        .card-img-top {
            border-top-right-radius: 10px;
            border-top-left-radius: 10px;
            max-height:120px;
        }

        span.text-muted {
            font-size: 12px
        }

        small.text-muted {
            font-size: 8px
        }

        h5.mb-0 {
            font-size: 1rem
        }

        small.ghj {
            font-size: 9px
        }

        .mid {
            background: #ECEDF1
        }

        h6.ml-1 {
            font-size: 13px
        }

        small.key {
            text-decoration: underline;
            font-size: 9px;
            cursor: pointer
        }

        .btn-danger {
            color: #FFCBD2
        }

            .btn-danger:focus {
                box-shadow: none
            }

        small.justify-content-center {
            font-size: 9px;
            cursor: pointer;
            text-decoration: underline
        }

        @@media screen and (max-width:600px) {
            .col-sm-4 {
                margin-bottom: 50px
            }
        }
        .container {
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .jumbotron {
            background-color: #a8eb34;
            height: 250px;
            background-image: url("/images/bgcar.jfif");
            background-size: cover;
            background-position: center;
            opacity: 0.7;
        }
        #btnClear
        {
            float:right;
        }
        #btnSearch
        {
            float: left;
        }
          </style>
</head>
<body>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            
            <h1 style="color:white; opacity:1;" class="display-4">
                @if (Session["NameProp"] != null)
                {<text>
                        Bienvenue @Session["NameProp"].ToString() </text>
            }
            </h1>
            <p style="color:white;  opacity:1;" class="lead">Nous sommes fières de travailler avec vous ! </p>
        </div>
    </div>

   
    <div class="row">
        @foreach (var item in Model)
        {
                    <div class="card">
                        <img src="@Url.Content("~/images/" + item.Image_Name)" class="card-img-top" >
                        <div class="card-body pt-0 px-0">
                            <div class="d-flex flex-row justify-content-between mb-0 px-3">
                                <span class="text-muted">Prix</span>
                                <h6>@item.Prix Dhs</h6>
                            </div>
                            <hr class="mt-2 mx-3">
                            <div class="d-flex flex-row justify-content-between px-3 pb-4">
                                <div class="d-flex flex-column"><span class="text-muted">Marque</span></div>
                                <div class="d-flex flex-column">
                                    <h5 class="mb-0">@item.Marque</h5><small class="text-muted text-right">@item.Emplacement_Prise</small>
                                </div>
                            </div>
                            <div class="d-flex flex-row justify-content-between p-3 mid">
                                <div class="d-flex flex-column">
                                    <small class="text-muted mb-1">Carburant</small>
                                    <div class="d-flex flex-row">
                                        <img src="https://imgur.com/iPtsG7I.png" width="35px" height="25px">
                                        <div class="d-flex flex-column ml-1"><h6 class="ml-1">@item.Carburant</h6></div>
                                    </div>
                                </div>
                                <div class="d-flex flex-column">
                                    <small class="text-muted mb-2">Boîte vitesse</small>
                                    <div class="d-flex flex-row">
                                        <img src="https://imgur.com/J11mEBq.png">
                                        <h6 class="ml-1">@item.Boite_Vitesse</h6>
                                    </div>
                                </div>
                            </div>
                          

                            <div class="row" style="margin-top:10px">
                                <div class="col-sm-12">
                                    <a href="#" style="width:70%" class="btn btn-danger" role="button"><small>View Details</small></a>
                                    <a href="@Url.Action("Edit", "Default", new { id = item.Id_Voiture })" id="btnSearch" class="my-auto"><img src="~/images/edit.jpg" width="30" /></a>
                                    <a href="@Url.Action("Delete", "Default", new { id = item.Id_Voiture })" id="btnClear" class="my-auto"><img src="~/images/trash.png" width="30" /></a>
                                </div>

                            </div>
                        </div>
                    </div>

               
            
        }
    </div>
   
</body>

</html>



