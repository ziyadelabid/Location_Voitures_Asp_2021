@model IEnumerable<Projet_Asp_Location_Voitures_2021.Models.Reservation>

@{
    ViewBag.Title = "MesReserve";
    Layout = "~/Areas/Locataire/Views/Shared/UserLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>s</title>
    <link href="css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    <style>
        a {
            padding-left: 10px;
        }

        .style2 {
            font-family: "Monotype Corsiva";
            font-size: xx-large;
            font-weight: bold;
            color: #3399FF;
            margin: 7px;
            text-align: center;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    <h2 class="style2">Mes reservations</h2>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" style="width:100%"  cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Marque
                            </th>
                            <th>
                                <h>Date de reservation</h>
                            </th>
                            <th>
                                <h>Date de retour</h>
                            </th>

                            <th>
                                <h>Montant</h>
                            </th>
                            <th>
                                <h>Payment</h>
                            </th>
                            <th>
                                <h>Statut de reservation</h>
                            </th>
                            <th>
                                <h>Prise à</h>
                            </th>

                            <th></th>
                        </tr>


                    <tbody>
                        @foreach (var item in Model.Where(x => x.Id_Loc.ToString() == Session["LocID"].ToString()))
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Voiture.Marque)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date_Reservation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date_Retour)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Montant)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Payment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusReservation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Voiture.Emplacement_Prise)
                            </td>
                            <td>
                                @*         <a href="@Url.Action("EditRes", "Locat", new { id = item.Id_Reservation})" id="btnSearch" class="my-auto"><img src="~/images/edit.jpg" width="30" /></a>
                                *@            <a href="@Url.Action("DeleteRes", "Locat", new { id = item.Id_Reservation })" id="btnClear" class="my-auto"><img src="~/images/trash.png" width="30" /></a>
                            </td>
                        </tr>                 

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
</body>
</html>
