@model  Projet_Asp_Location_Voitures_2021.Models.Reservation

@{
    ViewBag.Title = "DeleteRes";
    Layout = "~/Areas/Locataire/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Profil </title>
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' rel="stylesheet">
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js'></script>
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' rel="stylesheet">
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <style>
        body {
            margin-top: 50px;
            background-position: center;
            /* Center the image */ background-repeat: repeat-y; /* Do not repeat the image */
            background-size: cover;
            background-image: url("/images/profilbg.jpg");
            height: 100vh;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8;
        }

        .profile-button {
            background: #BA68C8;
            box-shadow: none;
            border: none;
        }

            .profile-button:hover {
                background: #682773;
            }

            .profile-button:focus {
                background: #682773;
                box-shadow: none;
            }

            .profile-button:active {
                background: #682773;
                box-shadow: none;
            }

        .back:hover {
            color: #682773;
            cursor: pointer;
        }

        .rounded-circle {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    
        @Html.AntiForgeryToken()

 <div class="container rounded bg-white">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="row">

            <div class="col-md-10">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">

               
                    </div>
                    <div class="row mt-2">
                        <h5 class="col-md-3s">Date de reservation :</h5>
                        <div class="col-md-3">@Html.DisplayFor(model => model.Date_Reservation, new { htmlAttributes = new { @class = "form-control", placeholder = "Nom Complet" } })</div>
                        <h5 class="col-md-3">Date de retour :</h5>
                        <div class="col-md-3">@Html.DisplayFor(model => model.Date_Retour, new { htmlAttributes = new { @class = "form-control", placeholder = "Tél" } })</div>
                    </div>
                    <div class="row mt-3">

                        <h5 class="col-md-3">Montant :</h5>
                        <div class="col-md-3">@Html.DisplayFor(model => model.Montant, new { htmlAttributes = new { @class = "form-control", placeholder = "Statut" } })</div>
                        <h5 class="col-md-3">Marque:</h5>
                        <div class="col-md-3">@Html.DisplayFor(model => model.Voiture.Marque, new { htmlAttributes = new { @class = "form-control", placeholder = "Tél" } })</div>

                    </div>
                    <div class="row mt-3">
                        
                        <div class="col-md-4">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Annuler" class="btn btn-danger" style="width:50%" />
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
     </div>


    

</body>

</html>


