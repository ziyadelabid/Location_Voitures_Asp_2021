@model Projet_Asp_Location_Voitures_2021.Models.Reservation

@{
    ViewBag.Title = "EditRes";
    Layout = "~/Areas/Locataire/Views/Shared/UserLayout.cshtml";
}

<h2>EditRes</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Reservation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Reservation)

        <div class="form-group">
            <label class="control-label col-md-4">Date de Reservation</label>
            <div class="col-md-10">
                <input type="date" name="Date_Reservation" id="Date_Reservation" class="form-control"/>
                @Html.ValidationMessageFor(model => model.Date_Reservation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Date de Retour</label>
            <div class="col-md-10">
                <input type="date" name="Date_retour" id="Date_retour" class="form-control" />
                @Html.ValidationMessageFor(model => model.Date_Retour, "", new { @class = "text-danger" })
            </div>
        </div>

   
   @Html.HiddenFor(model => model.Montant)
   @Html.HiddenFor(model => model.Id_Loc)

        <div class="form-group">
            <label class="control-label col-md-4">Marque :</label>
            <div class="col-md-10">
                @Html.DropDownList("Id_Voit", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_Voit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
